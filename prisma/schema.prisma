generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")

}

model user {
  user_id        Int    @id @default(autoincrement())
  email          String @unique
  hashedPassword String
  role           String @default("diver")

  //   firstname      String
  //   lastname       String
  birthday DateTime?
  //   certif_id      Int
  //   level_id       Int
}

model diveSession {
  id                    Int       @id @default(autoincrement())
  date                  DateTime?
  boat                  String?
  spot                  String?
  placesOnBoat          Int       @default(10)
  meetingSpot           String    @default("Club de plong√©e des Albatros")
  miniLevel             String    @default("all")
  price                 Int       @default(45)
  additionalInformation String?   @db.LongText
}

model certification {
  certif_id   Int    @id @default(autoincrement())
  name        String
  description String
}

model level {
  level_id    Int    @id @default(autoincrement())
  name        String
  description String
}

model club {
  club_id           Int      @id @default(autoincrement())
  email             String
  hashedPassword    String
  firstNameDirector String
  lastNameDirectior String
  createdAt         DateTime
  street            String
  PostalCode        Int
  lon               Int
  lat               Int
  title             String
  description       String
}
